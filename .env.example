# ===========================================
# Email Rewriter API - Environment Configuration
# ===========================================
# Copy this file to .env and update with your actual values

# ========== OpenAI Configuration (REQUIRED) ==========
OPENAI_API_KEY=sk-your-actual-openai-api-key-here

# ========== Model Settings (Optional) ==========
# GPT-4o-mini is the most cost-effective model: $0.00015/1K input, $0.0006/1K output
MODEL_NAME=gpt-4o-mini
MAX_TOKENS=2000
TEMPERATURE=0.7

# ========== API Server Configuration ==========
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO

# ========== Rate Limiting ==========
# Maximum requests per client IP in the specified period
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_PERIOD=60

# ========== Production Settings (Optional) ==========
# Set ENV=production for production mode
ENV=development
RENDER=false

# Comma-separated list of allowed hosts (for production)
ALLOWED_HOSTS=localhost,127.0.0.1

# ========== Python Settings ==========
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1
